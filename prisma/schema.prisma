// schema.prisma
generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url = env("POSTGRES_PRISMA_URL") // database connection pooling 
    directUrl = env("POSTGRES_URL_NON_POOLING") // direct database connection
}

model User {
    id  String @default(cuid()) @id
    name String?
    role String?
    @@map(name: "users")
}

model Article {
    id String @default(cuid()) @id
    name String?
    title String? 
    URL String?
    author String?
}