generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id       String  @id @default(cuid())
  name     String?
  role     String?
  email    String?
  password String?
  @@map("users")
}

model Article {
  id     String  @id @default(cuid())
  name   String?
  title  String?
  URL    String?
  author String?
}
